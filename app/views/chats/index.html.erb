<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <% content_for :title, "Chats" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Chats</h1>
  </div>

  <div id="chats" class="min-w-full">
    <% @chats.each do |chat| %>
      <%= render chat %>
      <p>
        <%= link_to "Show this chat", 
                    chat, 
                    class: "ml-2 mb-2 rounded-lg py-3 px-5 bg-blue-100 text-gray-700 inline-block font-medium" %>
      </p>
      <hr>
    <% end %>
  </div>
</div>
